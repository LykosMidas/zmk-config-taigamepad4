#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

#define DEFAULT 0
#define FIRST 1

/ {
    keymap {
        compatible = "zmk,keymap";
        label = "taigamepad4";

        default_layer {
            label = "Default";
            bindings = <
&sl 0  &kp LSHFT       &kp UP_ARROW    &kp RET
&sl 1  &kp LEFT_ARROW  &kp DOWN_ARROW  &kp RIGHT_ARROW  &kp SPACE
            >;
        };

        /* First
 * ,----------------------------.
 * |LShift| Cut  | Copy |Paste |  
 * |------+------+------+------+------|
 * | Space| Cut  | Copy |Paste |Return|
 * |-------------+------+------+------|
 */

        first_layer {
            label = "First";
            bindings = <
&trans     &kp LSHIFT  &kp LG(X)  &kp LG(C)
&kp LG(V)  &trans      &trans     &kp SPACE  &kp LG(X)
            >;
        };

        /* Second
 * ,----------------------------.
 * |LShift|Return| Prev |Next  |  
 * |------+------+------+------+------|
 * | Space| Mute |VolUp |VolDn |Play  |
 * |------+------+------+------+------|
 */

        second_layer {
            label = "Second";
            bindings = <
&trans      &kp LSHIFT  &kp RET  &kp C_PREV
&kp C_NEXT  &trans      &trans   &kp SPACE   &kp C_MUTE
            >;
        };

        /* Third
 * ,----------------------------.
 * | BL   |      |      |      |  
 * |------+------+------+------+------|
 * |      |      |      |      |      |
 * |------+------+------+------+------|
 */

        third_layer {
            label = "Third";
            bindings = <
&bootloader  &none  &none  &none
&none        &none  &none  &none  &none
            >;
        };
    };
};
